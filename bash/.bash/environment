OPT=$HOME/opt

# Various path additions
PATH=$PATH:$HOME/bin
export PATH

# bitcoin
export PATH=$PATH:/opt/bitcoin/bin

# For some odd reason, system locale not set for local user
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export EDITOR=vi

# Git editor
export GIT_EDITOR=vim

# rpi tools
export PATH=$PATH:~/tools/arm-bcm2708/arm-linux-gnueabihf/bin

# yarn
export PATH=$PATH:$HOME/.config/yarn/global/node_modules/.bin

# flow
export PATH=$PATH:$HOME/opt/flow

# homebrew
export PATH=$PATH:/home/linuxbrew/.linuxbrew/bin

#q
export PATH=$PATH:$HOME/opt/q/l32
export QHOME=$HOME/opt/q

# Hash slinger
export PATH=$PATH:$HOME/opt/hash-slinger-2.7

# java
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64

#nim
export PATH=$PATH:$HOME/opt/nim/bin
